@import '~@/style/variable.styl'

.wrapper
  display flex
  .tabs
    width 0
    position relative
    flex 1
    .tabs-inner >>>
      .el-tabs >
        .el-tabs__header
          margin 0
          .el-tabs__nav
            overflow hidden
          .el-tabs__nav-prev
          .el-tabs__nav-next
            width 20px
            line-height 40px
            i
              font-size 18px
              vertical-align middle
        .el-tabs__content
          display none
  .controller
    position relative
    bottom -1px
    >>>
      &.el-dropdown
        .el-button:nth-of-type(1)
          border-bottom-left-radius 0
        .el-button:nth-of-type(2)
          border-bottom-right-radius 0
